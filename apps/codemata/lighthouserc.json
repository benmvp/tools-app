{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3333/",
        "http://localhost:3333/formatters",
        "http://localhost:3333/formatters/typescript-formatter",
        "http://localhost:3333/minifiers/typescript-minifier",
        "http://localhost:3333/encoders/base64-encoder"
      ],
      "numberOfRuns": 2,
      "settings": {
        "preset": "desktop",
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1
        }
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.9 }],
        "categories:accessibility": ["error", { "minScore": 0.93 }],
        "categories:best-practices": ["error", { "minScore": 0.5 }],
        "categories:seo": ["error", { "minScore": 0.95 }]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": ".lighthouseci"
    }
  }
}
