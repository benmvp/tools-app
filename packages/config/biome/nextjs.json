{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"extends": ["./base.json"],
	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noUnknownAtRules": "off"
			},
			"complexity": {
				"noImportantStyles": "off"
			}
		},
		"domains": {
			"next": "recommended",
			"react": "recommended"
		}
	}
}
