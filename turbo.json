{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["GEMINI_API_KEY", "OPENAI_API_KEY"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["USE_TOOL_CONTENT_CACHE"]
    },
    "lint": {},
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "type-check": {}
  }
}
